<main class="container">
<h1>Eat the Burger!</h1>


    <div class="container">
        <div class="row">
            <div class="col s5">
                <h3>Burgers to Eat</h3>
                {{#each burgers}}
                {{#unless this.devoured}}
                <div>
                    <form action="/burgers/{{this.id}}" method="POST">
                        <button type="submit" class="burgerToEat"> {{this.burger_name}}</button>
                    </form>
                </div>
                {{/unless}}
                {{/each}}
            </div>
        </div>
    </div>

    <div class="col s2"></div>

        <div class="col s5">
            <h3>Burgers Eaten</h3>
        {{#each burgers}}
        {{#if this.devoured}}
        <div class="burgerDevoured">
            <div>
                {{this.burger_name}}
            </div>
        </div>
        {{/if}}
        {{/each}}
    </div>
    </div>
    </div>

    <br>
    <div class="row">
        <div class="valign-wrapper col s12">
            <form action="/burgers" method="POST">
                <input type="text" id="name" name="burger_name">
                <button type="submit" class="addBurgerButton">Add The Burger</button>
            </form>
        </div>
    </div>
</main>