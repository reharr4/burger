<h1>Devour the Burger!</h1>

<main>
    <div class="container">
        <div class="col s12">
            <h2>Burgers to be devoured</h2>
        </div>
        <div class="row">
            <div class="col s6">
                {{#each burgers}}
                {{#unless this.devoured}}
                {{!-- {{> burger_name/burger-block devoured=true}} --}}
                <div>
                    <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
                        <button type="submit" class="burgerToEat"> {{this.burger_name}}</button>
                    </form>
                </div>
                {{/unless}}
                {{/each}}
            </div>
        </div>
    </div>

    {{!-- <div class="row">
            <div class="col s6"> --}}
    <h2>Burgers that have been devoured</h2>
    {{!-- </div> --}}
    {{#each burgers}}
    {{#if this.devoured}}
    <div class="burgerDevoured">
        <div>
            {{this.burger_name}}
        </div>
    </div>
    {{!-- {{> burger_name/burger-block devoured=false}} --}}
    {{/if}}
    {{/each}}
    {{!-- </div> --}}
    </div>
    </div>

    <h2>Add a Burger</h2>

    <div class="row">
        <div class="valign-wrapper col s12">
            <form action="/burgers" method="POST">
                <input type="text" id="name" name="burger_name">
                <button class="btn waves-effect waves-light" type="submit" name="action">Order
                </button>
            </form>
        </div>
    </div>
</main>